<div class="header">

  <nav class="indigo" role="navigation">
    <div class="nav-wrapper container">
      <%=link_to "<i class='fa fa-blind fa-2x' aria-hidden='true'></i> &nbsp;&nbsp; Old Folk Shop".html_safe, root_path, class:'brand-logo', id:'logo-container' %>
      <ul class="right hide-on-med-and-down">
        <li><%=link_to "Categories", categories_path %></li>
        <li><%=link_to "Items", items_path %></li>
        <li><%=link_to "<i class='fa fa-shopping-cart fa-2x' aria-hidden='true'></i>".html_safe, cart_path %></li>
        <% if user_signed_in? %>
        <li>
          <a href='#' class="dropdown-button" data-activates='dropdownUser'>
            <%=image_tag(current_user.image, height: '40', width: '40') unless current_user.image.blank?%>
            <% if current_user.name %>
            <%= current_user.name %>
            <% else %>
            Account
            <% end %>
            &nbsp;&nbsp;<i class="fa fa-chevron-circle-down" aria-hidden="true"></i>
          </a>
        </li>
        <!-- Dropdown Structure -->
        <ul id='dropdownUser' class='dropdown-content'>
          <li><%=link_to "Settings", edit_user_registration_path %></li>
          <% if current_user.admin? %>
          <li><%=link_to "Admin Panel", rails_admin_path %></li>
          <% end %>
          <li class="divider"></li>
          <li><%=link_to "Log Out", destroy_user_session_path, method: :delete %></li>
        </ul>
        <% else %>
        <li><a class="modal-trigger" data-target="signup">Sign Up</a></li>
        <li><a class="modal-trigger" data-target="login">Log In</a></li>
        <% end %>
      </ul>


      <ul id="nav-mobile" class="side-nav">
        <li><%=link_to "Home", root_path %></li>
        <li><%=link_to "Categories", categories_path %></li>
        <li><%=link_to "Items", items_path %></li>
        <li><%=link_to "<i class='fa fa-shopping-cart fa-2x' aria-hidden='true'></i>".html_safe, cart_path %></li>
        <% if user_signed_in? %>
        <li class="black-text">
          <%=image_tag(current_user.image) unless current_user.image.blank?%>
          <% if current_user.name %>
          <%= current_user.name %>
          <% else %>
          Account
          <% end %>
        </li>
        <!-- Dropdown Structure -->

          <li><%=link_to "Settings", edit_user_registration_path %></li>
          <% if current_user.admin? %>
          <li><%=link_to "Admin Panel", rails_admin_path %></li>
          <% end %>
          <li class="divider"></li>
          <li><%=link_to "Log Out", destroy_user_session_path, method: :delete %></li>

        <% else %>
        <li><a class="modal-trigger" data-target="signup">Sign Up</a></li>
        <li><a class="modal-trigger" data-target="login">Log In</a></li>
        <% end %>
      </ul>
      <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
    </div>

  </nav>

  <div class="container">
    <%= form_tag(items_path, method: "get", id: "search-form", class: "center-align center-block") do %>
    <%= search_field_tag :search, params[:search], placeholder: "Search for products" %>
    <label for="search"><i class="fa fa-search fa-2x" aria-hidden="true"></i></label>
    <% end %>
  </div>

</div>
