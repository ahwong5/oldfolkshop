<div class="header">
  <div class="top-bar" id="main-menu">
    <div class="top-bar-left">
      <ul class="menu" data-responsive-menu="drilldown medium-dropdown">
        <li class="menu-text">Old Folk Shop</li>
        <li><%=link_to "Home", root_path %></li>
        <li><%=link_to "About", about_path %></li>
        <li><%=link_to "FAQ", faq_path %></li>
        <li><%=link_to "Categories", categories_path %></li>
        <li><%=link_to "Items", items_path %></li>
      </ul>
    </div>
    <div class="top-bar-right">
      <ul class="dropdown menu" data-dropdown-menu>
        <% if user_signed_in? %>
          <% if current_user.image %>
              <%=image_tag(current_user.image, height: '40', width: '40') %>
          <% end %>
        <li><%=link_to current_user.name, edit_user_registration_path %></li>
        <% if current_user.admin? %>
          <li><%=link_to "Admin Panel", rails_admin_path %></li>
        <% end %>
        <li><%=link_to "Log Out", destroy_user_session_path, method: :delete %></li>
        <% else %>
        <li><a data-open="signup">Sign Up</a></li>
        <li><a data-open="login">Log In</a></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
