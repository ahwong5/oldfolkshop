<div class="container">

  <h1>Your Cart</h1>

  <% if @items.empty? %>
  Your Cart Is Currently Empty
  <% else %>
  <% end %>

  <% total = 0 %>

  <table class="striped">
    <thead>
      <tr>
        <th data-field="id">Item</th>
        <th data-field="name">Price</th>
        <th data-field="price">Qty</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
    <% @items.each do |item| %>
        <tr>
          <td><%= link_to item.name, item %></td>
          <td><%= number_to_currency(item.price, :unit => 'RM') %></td>
          <td>
            <%= form_tag update_item_path(id: item.id), method: :patch do%>
              <td>
                <%= text_field_tag :quantity, item.quantity, id:"qty-cart" %>
              </td>
              <td>
                <%= submit_tag 'Update', class:"btn" %>
              </td>
              <td>
                <%= link_to "Delete", remove_item_path(id: item), method: :delete, class:"btn waves-effect waves-light" %>
              </td>
            <%end%>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

  

      <% if @items.empty? %>
      <% else %>
      <h2>Order Total: <%= number_to_currency(@totalprice, :unit => 'RM') %></h2>
      <% end %>

      <br>
      <%= link_to "Continue Shopping", items_path, class:"btn waves-effect waves-light" %>
      <a href="/addresses" class="btn waves-effect waves-light">Check Out Order</a>
      <br><br>
    </ul>
  </div>
