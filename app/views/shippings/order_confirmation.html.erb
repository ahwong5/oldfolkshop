<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Confirm Your Order Details</h1>

  <br><br>
  <h3>Your Shipping Info</h3>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= current_user.name %></td>
        <td><%= current_user.address %></td>
        <td><%= current_user.phone %></td>
      </tr>
    </tbody>
  </table>

  <div>
    <h3>Your Payment Info</h3>
    <table>
      <thead>
        <tr>
          <th>Payment Provider</th>
          <th>Available Payment Methods</th>
          <th>Estimated Delivery</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Bill Plz</td>
          <td>Credit Card or Internet Banking</td>
          <td>1 to 2 days</td>
        </tr>
      </tbody>
    </table>

    <h3>Your Order Items</h3>

    <% @items %>

    <% if @items.empty? %>
    <% else %>
    <table class="striped">
      <thead>
        <tr>
          <th data-field="id">Item</th>
          <th data-field="name">Price</th>
          <th data-field="price">Qty</th>
        </tr>
      </thead>
      <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= link_to item.name, item %></td>
          <td><%= number_to_currency(item.price, :unit => 'RM') %></td>
          <td>
            <%= form_tag update_item_path(id: item.id), method: :patch do%>
              <%= text_field_tag :quantity, item.quantity, id:"qty-cart" %>
            <%end%>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <% end %>

      <% if @items.empty? %>
      <% else %>
        <h2>Order Total: <%= number_to_currency(@totalprice, :unit => 'RM') %></h2>
      <% end %>
      <br>
      <%= link_to "Confirm Order", orders_path(totalprice: @totalprice, user_id: current_user.id), method: :post, class: "btn waves-effect waves-light" %>
      <br><br>
    </div>
