<p id="notice"><%= notice %></p>
<div class="container">


  <div class="row">
    <div class="col s6"><%= image_tag @item.image.medium %></div>
    <div class="col s6">
      <p>
        <h2><%= @item.name%></h2>
      </p>

      <p>
        <h5><%= @item.description %></h5>
      </p>

      <p>
        <h5><%= number_to_currency(@item.price, :unit => 'RM') %></h5>
      </p>

      <p>
        <strong>Inventory:</strong>
        <%= @item.inventory %>
      </p>

      <p>
        <strong>Status:</strong>
        <%= @item.status %>
      </p>
    </div>
  </div>





  <%= link_to 'Back', items_path, class:"btn waves-effect waves-light" %>
  <br><br>
</div>
